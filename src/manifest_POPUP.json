{
    "manifest_version": 3,
    "name": "Reactionz",
    "description": "Reactionz Chat Plugin",
    "version": "1.0",
    "options_ui": {
        "page": "options.html"
    },
    "action": {
        "default_icon": {
            "16": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["vendor.js", "js/content_script.js"]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [
        {
            "resources": ["popup.html"],
            "matches": ["https://google.com/*"]
        }
    ]
}
